{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "arrow-parens": "off",
    "no-descending-specificity": "off",
    "no-use-before-define":"off",
    "no-plusplus":"off",
    "default-case":"off",
    "no-unused-vars": "off",
    "import/prefer-default-export": "off"
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}
